@model IEnumerable<AmazonCloneMVC.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h3 class="align-content-center fw-light">Liste des Catégories</h3>

<p>
    <a class="btn btn-primary float-end" asp-action="Create">Nouvelle catégorie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomCategorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomCategorie)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategorieID">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CategorieID">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.CategorieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
