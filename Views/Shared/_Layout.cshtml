@using Microsoft.AspNetCore.Http
@using AmazonCloneMVC.Models

@inject IHttpContextAccessor Accessor
@{
    var val = 0;
    if (@Accessor.HttpContext.Session.GetCartService() != null)
    {
        val = @Accessor.HttpContext.Session.GetCartService()._cartItems.Count();

    }

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/card.css" asp-append-version="true" />
</head>
<body>


    <header>
        <nav class="navbar bg-white">
            <div class="nav-logo row py-2">
                <a href="/" class="col px-5"><img src="/images/logo.png" alt="logo"></a>
                <a href="/Produits" class="nav-link col text-blue fw-bold"  >Produits</a>
                <a href="/Categories" class="nav-link col text-blue fw-bold">Categories</a>
            </div>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item px-5">
                    <!-- Create a column for the right-aligned content -->
                    <a class="nav-link text-blue text-center fw-bold" href="Home/Cart">
                        @val <img src="/images/panier.png" width="24">

                    </a>
                </li>


            </ul>
        </nav>
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<footer class="footer sticky-footer ">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h5>About Us</h5>
                <ul class="footer-links">
                    <li><a href="#">Company</a></li>
                    <li><a href="#">Team</a></li>
                    <li><a href="#">Careers</a></li>
                    <li><a href="#">Contact Us</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h5>Products</h5>
                <ul class="footer-links">
                    <li><a href="#">Product 1</a></li>
                    <li><a href="#">Product 2</a></li>
                    <li><a href="#">Product 3</a></li>
                    <li><a href="#">Product 4</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h5>Services</h5>
                <ul class="footer-links">
                    <li><a href="#">Service 1</a></li>
                    <li><a href="#">Service 2</a></li>
                    <li><a href="#">Service 3</a></li>
                    <li><a href="#">Service 4</a></li>
                </ul>
            </div>
            <div class="col-md-3">
                <h5>Resources</h5>
                <ul class="footer-links">
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Terms of Service</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>