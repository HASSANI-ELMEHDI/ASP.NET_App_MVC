@model IEnumerable<AmazonCloneMVC.Models.Produit>

@{
    ViewData["Title"] = "Index";
}

<h3 class="align-content-center fw-light">Liste des Produits</h3>

<a class="btn btn-primary float-end" asp-action="Create">Nouveau produit</a>

<br/>
<br />
<div class="row">
    <table class="table table-striped table-responsive">
        <thead>
        <tr>
            <th>Nom du produit</th>
            <th>Description</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Catégorie</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProduitName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Prix)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantite)</td>
                <td>@Html.DisplayFor(modelItem => item.Categorie.NomCategorie)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ProduitID">Modifier</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ProduitID">Détails</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProduitID">Supprimer</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
